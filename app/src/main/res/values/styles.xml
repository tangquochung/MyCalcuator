//Linear Layout
<style name="MyLinearLayout">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">0dp</item>
    <item name="android:layout_margin">@dimen/layout_margin</item>
    <item name="android:background">@drawable/my_border</item>
</style>

//Linear Layout no border
<style name="MyLinearLayoutNoMarginNoBorderStyle">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">0dp</item>
    <item name="android:paddingRight">10dp</item>
    <item name="android:paddingBottom">10dp</item>
    <item name="android:orientation">horizontal"></item>
</style>

//Text View Style
<style name="TextViewStyle">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:paddingRight">20dp</item>
    <item name="android:gravity">right|center_vertical</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textSize">30sp</item>
</style>

//button
<style name="ButtonStyle">
    <item name="android:gravity">center</item>
    <item name="android:textSize">30dp</item>
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_weight">1</item>
    <item name="android:background">@drawable/btn_color</item>
    <item name="android:textStyle">bold</item>
    <item name="android:layout_marginTop">10dp</item>
    <item name="android:layout_marginLeft">10dp</item>
</style>